<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtRegistroLibros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro libros:"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/nombreLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtRegistroLibros"
            android:hint="Nombre libro"
            android:layout_marginTop="50dp"/>

        <Button
            android:id="@+id/guardarLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombreLibro"
            android:layout_marginTop="30dp"
            android:text="Guardar"/>

        <TextView
            android:id="@+id/mostrarLibro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/guardarLibro"
            android:layout_marginTop="30dp"
            android:textSize="30sp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>